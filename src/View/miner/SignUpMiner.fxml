<AnchorPane fx:id="addReco" prefHeight="550.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="View.miner.SignUpMinerController">
   <children>
      <ImageView fitHeight="590.0" fitWidth="701.0" style="-fx-opacity: 0.9;">
         <image>
            <Image url="@../../btcbg.jpg" />
         </image>
      </ImageView>
      <Label layoutX="183.0" layoutY="43.0" prefHeight="51.0" prefWidth="390.0" style="-fx-opacity: 0.8;" text="Sign Up to FlipCoin Mining" textFill="WHITE">
         <font>
            <Font name="System Bold" size="28.0" />
         </font>
      </Label>
      <TextField fx:id="name" alignment="CENTER" layoutX="266.0" layoutY="105.0" prefHeight="25.0" prefWidth="181.0" promptText="Name" />
      <PasswordField fx:id="pass" alignment="CENTER" layoutX="267.0" layoutY="151.0" prefHeight="26.0" prefWidth="181.0" promptText="Password" />
      <TextField fx:id="email" alignment="CENTER" layoutX="266.0" layoutY="195.0" prefHeight="25.0" prefWidth="181.0" promptText="Email" />
      <CheckBox fx:id="checkBoxCompany" layoutX="216.0" layoutY="248.0" mnemonicParsing="false" onAction="#showCompanyFields" text="Are you a Business Company?" textFill="WHITE">
         <font>
            <Font name="System Bold" size="17.0" />
         </font>
      </CheckBox>
      <TextField fx:id="cname" alignment="CENTER" layoutX="266.0" layoutY="288.0" prefHeight="25.0" prefWidth="181.0" promptText="Contact Name" />
      <TextField fx:id="cphone" alignment="CENTER" layoutX="266.0" layoutY="329.0" prefHeight="25.0" prefWidth="181.0" promptText="Contact Phone" />
      <TextField fx:id="cemail" alignment="CENTER" layoutX="266.0" layoutY="372.0" prefHeight="25.0" prefWidth="181.0" promptText="Contact Email" />
      <Button fx:id="signUpButton" layoutX="164.0" layoutY="503.0" mnemonicParsing="false" onAction="#addUser" prefHeight="33.0" prefWidth="181.0" text="Sign Up" />
      <Button fx:id="clearButton" layoutX="380.0" layoutY="503.0" mnemonicParsing="false" onAction="#clearForm" prefHeight="33.0" prefWidth="172.0" text="Clear" />
      <Label fx:id="labelSuccess" layoutX="138.0" layoutY="411.0" opacity="0.77" prefHeight="33.0" prefWidth="549.0" textFill="WHITE">
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
      </Label>
      <TextField fx:id="generatedUsername" alignment="CENTER" editable="false" layoutX="267.0" layoutY="446.0" prefHeight="25.0" prefWidth="181.0" promptText="Unique Address" />
   </children>
</AnchorPane>
